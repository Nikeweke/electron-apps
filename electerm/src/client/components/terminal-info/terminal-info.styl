@require '../../css/includes/theme-default'
.terminal-info-icon
  color text-dark
  &:hover
    color text
.info-panel-wrap
  position fixed
  right 0
  top 100px
  bottom 0
  width 500px
  background main
  color text
  box-shadow 0px 3px 3px 3px alpha(main, .25)
  z-index 100
  overflow-y scroll
  opacity .9
.terminal-info-section
  padding 10px 0
.terminal-info-act
.terminal-info-disk
.terminal-info-network
  max-height 260px
  overflow-y scroll
.activity-item
  .activity-item-copy
    display none
  &:hover .activity-item-copy
    display inline